{% extends "default.html" %}

{% block body %}
<h1>{{ the_title }}</h1>
<div class="row">
    <div class="span5">
        <h2>Listes :</h2>
        <ul>
            {% for list in lists %}
                <li>
                    {% load tags %}
                    <b>{{list}}<span class="badge {% countbadgetype list %}">{% itemsless list %}</span></b>
                    {% for item in list.items.all %}
                        {% if item.outOfStock %}
                            <label class="checkbox">
                              <input type="checkbox" value="" checked>
                               <!--<strike style='color: grey'>{{item}}</strike>-->
                               <div style='color: grey'>{{item}}</div>
                            </label>
                        {% else %}
                            <label class="checkbox">
                              <input type="checkbox" value="">
                               {{item}}
                            </label>
                        {% endif %}
                    {% endfor %}
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="span5">
        <h2>Recettes :</h2>
        <ul>
            {% for recipe in recipes %}
                <li>

                    {% load tags %}
                    <b>{{recipe}}</b><span class="badge {% countbadgetype recipe %}">{% itemsless recipe %}</span>
                    {% for item in recipe.items.all %}
                        {% if item.outOfStock %}
                            </br><i class="icon-remove"></i> <strike style='color: red'>{{item}}</strike>
                        {% else %}
                            </br><i class="icon-remove icon-white"></i> {{item}}
                        {% endif %}
                    {% endfor %}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>

{% endblock %}

Items :
<ul>
    {% for item in items %}
            {% if item.outOfStock %}
                </br><strike>{{item}}</strike>
            {% else %}
                </br> {{item}}
            {% endif %}
    {% endfor %}
</ul>


